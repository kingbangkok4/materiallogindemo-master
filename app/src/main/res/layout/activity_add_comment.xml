<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/bg">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/textView2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:id="@+id/textView"
        android:layout_alignTop="@+id/textView2"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignStart="@+id/textView2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textColor="#fffefe"
        android:background="#f1e41206" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:textSize="12sp"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:background="@drawable/badge_background"
        android:layout_alignBottom="@+id/btnComment"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/button"
        android:layout_toLeftOf="@+id/textView40"
        android:layout_toStartOf="@+id/textView40" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Notifications"
        android:id="@+id/textView3"
        android:layout_marginLeft="41dp"
        android:textStyle="bold"
        android:layout_below="@+id/textView2"
        android:layout_toRightOf="@+id/textView2"
        android:layout_toEndOf="@+id/textView2"
        android:layout_marginTop="22dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Logout"
        android:id="@+id/textView4"
        android:textStyle="bold"
        android:layout_marginRight="38dp"
        android:layout_marginEnd="38dp"
        android:layout_alignTop="@+id/textView3"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Setting"
        android:id="@+id/textView5"
        android:textStyle="bold"
        android:layout_alignTop="@+id/textView4"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/textView8"
        android:background="@drawable/user"
        android:layout_below="@+id/textView"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignStart="@+id/textView3"
        android:layout_marginTop="26dp" />

    <Button
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/button"
        android:background="@drawable/nat"
        android:layout_alignTop="@+id/btnComment"
        android:layout_alignRight="@+id/textView8"
        android:layout_alignEnd="@+id/textView8" />

    <Button
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:id="@+id/btnComment"
        android:background="@drawable/setting"
        android:layout_above="@+id/textView5"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:id="@+id/btnLogout"
        android:background="@drawable/log"
        android:layout_alignBottom="@+id/btnComment"
        android:layout_alignRight="@+id/textView4"
        android:layout_alignEnd="@+id/textView4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ชื่อ - นามสกุล"
        android:id="@+id/textView9"
        android:textStyle="bold"
        android:textColor="#040404"
        android:layout_marginBottom="20dp"
        android:layout_alignBottom="@+id/textView8"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Join"
        android:id="@+id/textView37"
        android:textStyle="bold"
        android:textColor="#040404"
        android:layout_below="@+id/textView8"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:textSize="32dp" />

    <TextView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/textView38"
        android:background="@drawable/user"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/textView5"
        android:layout_toStartOf="@+id/textView5" />

    <TextView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/textView39"
        android:background="@drawable/user"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/textView5"
        android:layout_toEndOf="@+id/textView5" />

    <TextView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/textView40"
        android:background="@drawable/fav"
        android:layout_marginTop="24dp"
        android:layout_below="@+id/textView38"
        android:layout_toLeftOf="@+id/btnComment"
        android:layout_toStartOf="@+id/btnComment" />

    <TextView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/textView41"
        android:background="@drawable/fav"
        android:layout_above="@+id/editText5"
        android:layout_alignRight="@+id/textView3"
        android:layout_alignEnd="@+id/textView3" />

    <TextView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/textView42"
        android:background="@drawable/fav"
        android:layout_alignTop="@+id/textView40"
        android:layout_alignRight="@+id/textView37"
        android:layout_alignEnd="@+id/textView37" />

    <TextView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/textView43"
        android:background="@drawable/fav"
        android:layout_above="@+id/editText5"
        android:layout_alignRight="@+id/textView39"
        android:layout_alignEnd="@+id/textView39" />

    <TextView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/textView44"
        android:background="@drawable/fav"
        android:layout_above="@+id/editText5"
        android:layout_toRightOf="@+id/textView39"
        android:layout_toEndOf="@+id/textView39" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/editText5"
        android:lines="5"
        android:background="#ffffff"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/textView40"
        android:layout_alignLeft="@+id/textView41"
        android:layout_alignStart="@+id/textView41"
        android:textColor="#0f0f0f" />

    <Button
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:id="@+id/button14"
        android:background="@drawable/green"
        android:layout_below="@+id/editText5"
        android:layout_toRightOf="@+id/textView40"
        android:layout_toEndOf="@+id/textView40"
        android:layout_marginTop="11dp" />


</RelativeLayout>
